@model IEnumerable<Internet.Models.Product>
<!doctype html>
<html lang="en">

<head>
    @{
        ViewData["Title"] = "Index";
    }
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <h1 class="mt-3">Product List</h1>

    <form asp-action="FuzzySearch" method="get" class="mt-3 mb-4">
        <div class="input-group">
            <input type="text" class="form-control" id="searchKeyword" name="searchKeyword"
                placeholder="Enter search keyword">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>
        </div>
    </form>

    <main class="main-content">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SupplierId)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductCode)</th>
                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                    <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.QtyInStock)</th>
                    <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
                    <th>Preview</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.SupplierId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.QtyInStock)</td>
                        <td>@Html.DisplayFor(modelItem => item.ImagePath)</td>
                        <td>
                            <!-- display picture -->
                            <img src="@item.ImagePath" alt="Product Image" style="width: 100px; height: auto;" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tiny-slider.js"></script>
    <script src="~/js/custom.js"></script>
</body>

</html>
