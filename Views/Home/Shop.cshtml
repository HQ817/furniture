@model IEnumerable<Internet.Models.Product>

<nav class="category-nav">
      <a href="@Url.Action("Shop", "Home", new { type = "Sofa" })">Sofa</a>
      <a href="@Url.Action("Shop", "Home", new { type = "Chair" })">Chair</a>
      <a href="@Url.Action("Shop", "Home", new { type = "Bed" })">Bed</a>
      <a href="@Url.Action("Shop", "Home", new { type = "Desk" })">Desk</a>
</nav>



<div class="container">
      <div class="row">
            @foreach (var product in Model)
            {
                  <div class="col-md-4 col-lg-3 mb-5">
                        <a class="product-item" href="#">
                              <img src="@Url.Content(product.ImagePath)" class="img-fluid product-thumbnail">
                              <h3 class="product-title">@product.ProductCode</h3>
                              <strong class="product-price">$@product.UnitPrice</strong>
                        </a>
                  </div>
            }
      </div>
</div>




<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/tiny-slider.js"></script>
<script src="~/js/custom.js"></script>
